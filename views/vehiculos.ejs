<!DOCTYPE html>
<html lang="es-ES">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vehículos</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script defer src="/js/bootstrap.bundle.min.js"></script>
</head>


<body>
    <header>
        <%- include('navbar') %>
    </header>

    <div class="container-main text-center">
        <h2 class="titulo vehiculos my-5">Vehículos Disponibles</h2>

        <!-- Fltro de vehiculos -->
        <div class="container my-4 p-4 rounded-4 shadow-lg">
            <form action="/vehiculos" method="GET" class="row g-3 align-items-end"> 
                <!-- Fltro de Estado -->
                <div class="col-md-2">
                    <label for="filtroEstado" class="form-label fw-bold">Estado</label>
                    <select name="estado" id="filtroEstado" class="form-select">
                        <option value="" <%= !query.estado ? 'selected' : '' %>>Todos</option>
                        <option value="disponible" <%= query.estado === 'disponible' ? 'selected' : '' %>>Disponible</option>
                        <option value="reservado" <%= query.estado === 'reservado' ? 'selected' : '' %>>Reservado</option>
                        <option value="mantenimiento" <%= query.estado === 'mantenimiento' ? 'selected' : '' %>>Mantenimiento</option>
                    </select>
                </div>
                <!-- Fltro de Concesionario -->
                <div class="col-md-3">
                    <label for="filtroConcesionario" class="form-label fw-bold">Concesionario</label>
                    <select name="concesionario" id="filtroConcesionario" class="form-select">
                        <option value="">Todos</option>
                        <% if (typeof concesionarios !== 'undefined') { %>
                            <% concesionarios.forEach(c => { %>
                                <option value="<%= c.id_concesionario %>" 
                                    <%= query.concesionario == c.id_concesionario ? 'selected' : '' %>>
                                    <%= c.nombre %> (<%= c.ciudad %>)
                                </option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>
                <!-- Fltro de Autonomía -->
                <div class="col-md-2">
                    <label for="filtroAutonomia" class="form-label fw-bold">Autonomía (Min Km)</label>
                    <input type="number" name="autonomia" id="filtroAutonomia" class="form-control" value="<%= query.autonomia || '' %>" min="0">
                </div>
                <!-- Fltro de Plazas -->
                <div class="col-md-2">
                    <label for="filtroPlazas" class="form-label fw-bold">Plazas</label>
                    <select name="plazas" id="filtroPlazas" class="form-select">
                        <option value="">Todos</option>
                        <option value="2" <%= query.plazas == '2' ? 'selected' : '' %>>2 Plazas</option>
                        <option value="4" <%= query.plazas == '4' ? 'selected' : '' %>>4 Plazas</option>
                        <option value="5" <%= query.plazas == '5' ? 'selected' : '' %>>5 Plazas</option>
                        <option value="7" <%= query.plazas == '7' ? 'selected' : '' %>>7+ Plazas</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="filtroColor" class="form-label fw-bold">Color</label>
                    <input type="text" name="color" id="filtroColor" class="form-control" value="<%= query.color || '' %>">
                </div>

                <div class="col-md-1 d-grid">
                    <button type="submit" class="btn btn-primary rounded-3" title="Aplicar filtros">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </div>
                
                <div class="col-12 text-end mt-2">
                    <a href="/vehiculos" class="text-decoration-none small text-muted">Limpiar filtros ✕</a>
                </div>
            </form>
        </div>
        <!-- Mostrar vehiculos -->
        <div class="container-coche container mb-5">
            <% if (vehiculos.length > 0) { %>
                <div class="row">
                    <!-- Para Cada vehiculo -->
                    <% vehiculos.forEach(vehiculo => { %>
                        <div class="col-md-4 mb-4"><!-- col-md-4 Usa el sistema de rejilla de Bootstrap, 4 col de las 12 - mb-4 margen bottom 4-->
                            <div class="card h-100 shadow-sm rounded-4 overflow-hidden"> <!-- card -->
                                <!-- imagen -->
                                <div class="bg-light text-center"> 
                                    <img src="<%= vehiculo.imagen || '/images/default-car.png' %>" 
                                        class="card-img-top" 
                                        alt="Foto del vehiculo <%= vehiculo.marca %>" 
                                        style="height: 180px; object-fit: contain;">
                                </div>
                                <!-- description card body-->
                                <div class="card-body d-flex flex-column"> 
                                    <h5 class="card-title"><%= vehiculo.marca %> <%= vehiculo.modelo %></h5>
                                    <p class="card-text">
                                        <strong>Año:</strong> <%= vehiculo.año_matriculacion %><br>
                                        <strong>Precio:</strong> <%= vehiculo.precio %>€
                                    </p>
                                    
                                    <div class="mt-auto"> 
                                        <!-- badge para el estado del vehiculo -->
                                        <% 
                                        let claseBadge = 'bg-danger'; // Rojo por defecto 
                                        if (vehiculo.estado === 'disponible') {
                                            claseBadge = 'bg-success'; 
                                        } else if (vehiculo.estado === 'reservado') {
                                            claseBadge = 'bg-warning text-dark'; 
                                        }
                                        %>
                                        <span class="badge rounded-pill <%= claseBadge %>">
                                            <%= vehiculo.estado.charAt(0).toUpperCase() + vehiculo.estado.slice(1) %>
                                        </span>
                                        <!-- botton reservar -->
                                        <% if (vehiculo.estado === 'disponible') { %>  
                                            <a href="/vehiculos/reservarVehiculo/<%= vehiculo.id_vehiculo %>" class="btn btn-outline-primary w-100 mt-2 rounded-4">Reservar</a>
                                        <% } else { %>
                                            <button class="btn btn-outline-secondary  w-100 mt-2 rounded-4" disabled>
                                                <%= vehiculo.estado %> </button>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

            <!-- si no hay vehiculos que mostrar -->
            <% } else { %> 
                <div class="alert alert-warning mt-5">No hay vehículos con este estado.</div>
            <% } %>
        </div>
    </div>

    <footer>
      <!--Importamos el footer que tenemos creado-->
      <div id="footer-container"></div>
      <script>
        fetch('/footer.html')
          .then(response => response.text()) //load footer.html content
          .then(html => {
          document.getElementById('footer-container').innerHTML = html; 
        });
      </script>
    </footer>
</body>
</html>
