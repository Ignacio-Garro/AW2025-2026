<!DOCTYPE html>
<html lang="es-ES">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vehículos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/stylesVehiculos.css">
</head>


<body>
    <%- include('navbar') %>

    <div class="container-main text-center">
        <h2 class="titulo vehiculos pt-5">Vehículos Disponibles</h2>

        <div class="container-coche">
            <% vehiculos.forEach(vehiculo => { %>
                <div class="row">
                    <div class="col m-5 d-flex align-items-center">
                        <div class="box-car text-start">
                            <h3 class="car-name"><strong><%= vehiculo.nombre %></strong></h3>
                            <ul>
                                <li>Marca: <%= vehiculo.marca %></li>
                                <li>Modelo: <%= vehiculo.modelo %></li>
                                <li>Año: <%= vehiculo.año %></li>
                                <li>Color: <%= vehiculo.color %></li>
                                <li>Precio: <%= vehiculo.precio %></li>
                            </ul>
                            <a href="#" class="btn btn-primary">Reservar</a>
                        </div>
                    </div>
                    <div class="col-7 p-5">
                        <img src="<%= vehiculo.imagen %>" alt="<%= vehiculo.nombre %>" class="fotoCoche">
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
