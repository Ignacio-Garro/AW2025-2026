<!DOCTYPE html>
<html lang="es-ES">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- mobile friendly -->
    <title>gestionVehiculos</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script defer src="/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <header>
        <%- include('navbar') %>
    </header>

    <div class="container my-5">
        <h2 class="mb-4">Gestión de Vehículos</h2>
        
        <div class="row mb-4">
            <!-- Carga JSON-->
            <div class="col-md-8">
                <div class="card p-3 bg-light">
                    <h3 class="mb-3">Carga JSON</h3>
                    <form action="/cargar-json-vehiculos" method="POST" enctype="multipart/form-data" class="d-flex gap-3">
                        <input type="file" name="fichero_json" class="form-control" accept=".json" required>
                        <button type="submit" class="btn btn-primary w-50">Cargar</button>
                    </form>
                </div>
            </div>
            <!-- botton individual -->
            <div class="col-md-4 text-end d-flex align-items-center justify-content-end">
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalVehiculo">+ Nuevo Vehículo</button>
            </div>
        </div>
        <!-- buscador -->
        <div class="mb-3">
             <input type="text" id="buscador" class="form-control" placeholder="Buscar por matrícula o marca...">
        </div>
        <!-- tabla con datos de vehiculos -->
        <div class="table-responsive shadow-sm rounded-4 border">
            <table class="table table-striped table-hover align-middle">
                <!-- tabla headers -->
                <thead class="table-light"></thead>
                    <tr>
                        <th>ID</th><th>Imagen</th><th>Matrícula</th><th>Marca / Modelo</th><th>Autonomía</th><th>Estado</th><th>Acciones</th>
                    </tr>
                </thead>
                <!-- tabla body -->
                <tbody id="tablaCuerpo">
                    <% if(vehiculos.length > 0) { %>
                        <% vehiculos.forEach((v) => { %>
                        <tr>
                            <td><%= v.id_vehiculo %></td>
                            <td><img src="<%= v.imagen %>"
                                alt="Imagen del vehículo"
                                style="width: 150px; height: 50px; object-fit: cover;">
                            </td>
                            <td><strong><%= v.matricula %></strong></td>
                            <td><%= v.marca %> <%= v.modelo %></td>
                            <td><%= v.autonomia_km %> km</td>
                            
                            <td> <!-- badge para el estado del vehiculo -->
                                <% let claseBadge = 'bg-danger'; // Rojo por defecto 
                                if (v.estado === 'disponible') {
                                    claseBadge = 'bg-success'; 
                                } else if (v.estado === 'reservado') {
                                    claseBadge = 'bg-warning text-dark'; 
                                } 
                                %>
                                <span class="badge rounded-pill <%= claseBadge %>">
                                    <%= v.estado.charAt(0).toUpperCase() + v.estado.slice(1) %>
                                </span>
                            </td>

                            <td>
                                <!-- editar MODAL guardamos los datos del vehiculo para mostartlo en el modal -->
                                <button type="button" 
                                        class="btn btn-sm btn-warning" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#modalEditarVehiculo"
                                        data-id="<%= v.id_vehiculo %>"
                                        data-matricula="<%= v.matricula %>"
                                        data-marca="<%= v.marca %>"
                                        data-modelo="<%= v.modelo %>"
                                        data-anio="<%= v.año_matriculacion %>"
                                        data-precio="<%= v.precio %>"
                                        data-plazas="<%= v.numero_plazas %>"
                                        data-autonomia="<%= v.autonomia_km %>"
                                        data-color="<%= v.color %>"
                                        data-imagen="<%= v.imagen %>"
                                        data-estado="<%= v.estado %>"
                                        data-concesionario="<%= v.id_concesionario %>">
                                    Editar
                                </button>
                                <!-- borrar -->
                                <form action="/borrar-vehiculo/<%= v.id_vehiculo %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Baja</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <!-- si no hay vehiculos -->
                        <tr><td colspan="7" class="text-center">No hay vehículos.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- ------------------------------------------------------------------------------------------------------- -->

    <!-- Modal nuevo vehiculo-->
    <div class="modal fade" id="modalVehiculo" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog"><!-- MODAl-->
            <div class="modal-content">
                <form action="/crear-vehiculo" method="POST"> <!-- POST NUEVO VEHICULO INDIVIDUAL -->
                    <div class="modal-header">
                        <h5 class="modal-title">Datos del Vehículo</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label>matricula</label>
                                <input type="text" name="matricula" class="form-control" required>
                            </div>
                            <div class="col-6 mb-3">
                                <label>Marca</label>
                                <input type="text" name="marca" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label>Modelo</label>
                                <input type="text" name="modelo" class="form-control" required>
                            </div>
                            <div class="col-6 mb-3">
                                <label>Año de Matriculación</label>
                                <input type="number" name="año_matriculacion" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label>precio</label>
                                <input type="number" name="precio" class="form-control" required>
                            </div>
                            <div class="col-6 mb-3">
                                <label>numero_plazas</label>
                                <input type="number" name="numero_plazas" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label>autonomia_km</label>
                                <input type="number" name="autonomia_km" class="form-control" required>
                            </div>
                            <div class="col-6 mb-3">
                                <label>color</label>
                                <input type="text" name="color" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label>imagen</label>
                                <input type="text" name="imagen" class="form-control" required>
                            </div>
                            <!-- estado -->
                            <div class="col-6 mb-3">
                                <label class="form-label">Estado</label>
                                <select name="estado" class="form-select" required>
                                    <option value="disponible" selected>Disponible</option>
                                    <option value="reservado">Reservado</option>
                                    <option value="mantenimiento">Mantenimiento</option>
                                </select>
                            </div>
                        </div>
                        <!-- concesioarios -->
                        <div class="mb-3">
                            <label>Concesionario</label>
                            <select name="id_concesionario" class="form-select">
                                <% if(concesionarios) { %>
                                    <% concesionarios.forEach(c => { %>
                                        <option value="<%= c.id_concesionario %>"><%= c.nombre %> (<%= c.ciudad %>)</option>
                                    <% }) %>
                                <% } %>
                            </select>
                        </div>
                        </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Crear nuevo vehiculo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal editar vehiculo-->
    <div class="modal fade" id="modalEditarVehiculo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form id="formEditar" method="POST"> 
                <div class="modal-header">
                    <h5 class="modal-title">Editar Vehículo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label>Matrícula</label>
                            <input type="text" name="matricula" id="edit_matricula" class="form-control" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label>Marca</label>
                            <input type="text" name="marca" id="edit_marca" class="form-control" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label>Modelo</label>
                            <input type="text" name="modelo" id="edit_modelo" class="form-control" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label>Año</label>
                            <input type="number" name="año_matriculacion" id="edit_anio" class="form-control" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label>Precio</label>
                            <input type="number" name="precio" id="edit_precio" class="form-control" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label>Plazas</label>
                            <input type="number" name="numero_plazas" id="edit_plazas" class="form-control" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label>Autonomía</label>
                            <input type="number" name="autonomia_km" id="edit_autonomia" class="form-control" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label>Color</label>
                            <input type="text" name="color" id="edit_color" class="form-control" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label>Imagen (URL)</label>
                            <input type="text" name="imagen" id="edit_imagen" class="form-control" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label>Estado</label>
                            <select name="estado" id="edit_estado" class="form-select" required>
                                <option value="disponible">Disponible</option>
                                <option value="reservado">Reservado</option>
                                <option value="mantenimiento">Mantenimiento</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Concesionario</label>
                        <select name="id_concesionario" id="edit_concesionario" class="form-select">
                            <% if(concesionarios) { %>
                                <% concesionarios.forEach(c => { %>
                                    <option value="<%= c.id_concesionario %>"><%= c.nombre %> (<%= c.ciudad %>)</option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

    <footer>
      <!--Importamos el footer que tenemos creado-->
      <div id="footer-container"></div>
      <script>
        fetch('/footer.html')
          .then(response => response.text()) //load footer.html content
          .then(html => {
          document.getElementById('footer-container').innerHTML = html; 
        });
      </script>
    </footer>
    
    <script>//actualización dinámica del buscador
        document.getElementById('buscador').addEventListener('keyup', function() {
            let valor = this.value.toLowerCase();
            let filas = document.querySelectorAll('#tablaCuerpo tr');
            filas.forEach(fila => {
                let texto = fila.textContent.toLowerCase();
                fila.style.display = texto.includes(valor) ? '' : 'none';
            });
        });
    </script>

    <!--script para rellenar el modal de editar vehiculo-->
    <script>
        const modalEditar = document.getElementById('modalEditarVehiculo');

        // Escuchamos el evento de Bootstrap que avisa cuando el modal se está abriendo
        modalEditar.addEventListener('show.bs.modal', function (event) {
            //Botón que ha activado el modal
            const boton = event.relatedTarget; 

            //conseguimos los datos del vehiculo del boton
            const id = boton.getAttribute('data-id');
            const matricula = boton.getAttribute('data-matricula');
            const marca = boton.getAttribute('data-marca');
            const modelo = boton.getAttribute('data-modelo');
            const anio = boton.getAttribute('data-anio');
            const precio = boton.getAttribute('data-precio');
            const plazas = boton.getAttribute('data-plazas');
            const autonomia = boton.getAttribute('data-autonomia');
            const color = boton.getAttribute('data-color');
            const imagen = boton.getAttribute('data-imagen');
            const estado = boton.getAttribute('data-estado'); 
            const concesionario = boton.getAttribute('data-concesionario');

            //rellenamos los inputs
            document.getElementById('edit_matricula').value = matricula;
            document.getElementById('edit_marca').value = marca;
            document.getElementById('edit_modelo').value = modelo;
            document.getElementById('edit_anio').value = anio;
            document.getElementById('edit_precio').value = precio;
            document.getElementById('edit_plazas').value = plazas;
            document.getElementById('edit_autonomia').value = autonomia;
            document.getElementById('edit_color').value = color;
            document.getElementById('edit_imagen').value = imagen;
            
            //rellenamos el select del estado y concesionario
            document.getElementById('edit_estado').value = estado.toLowerCase();
            document.getElementById('edit_concesionario').value = concesionario;
            
            //actualizamos la acción del formulario para incluir el ID del vehículo
            const form = document.getElementById('formEditar');
            form.action = '/editar-vehiculo/' + id; // llamamos al post de verdad
        });
    </script>
</body>
</html>